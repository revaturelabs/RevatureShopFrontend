{
  "root": true,
  "env": {
    "node": true,
	"jasmine": true
  },
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "plugins": ["@typescript-eslint"],
	  "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "project": [
          "tsconfig.json"
        ]
      },
      "extends": [
        "plugin:@angular-eslint/recommended",
        "plugin:@angular-eslint/template/process-inline-templates"
      ]
    },
    {
      "files": [
        "*.html"
      ],
      "extends": [
        "plugin:@angular-eslint/template/recommended"
      ]
    }
  ]
}
